{% extends 'baseAdmin.html.twig' %}

{% block title %}Option index{% endblock %}

{% block contentAdmin  %}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for option in options %}
            <tr>
                <td>{{ option.id }}</td>
                <td>{{ option.name }}</td>
                <td>
                    <a href="{{ path('app_admin_option_show', {'id': option.id}) }}">show</a>
                    <a href="{{ path('app_admin_option_edit', {'id': option.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_option_new') }}">Create new</a>
{% endblock %}
