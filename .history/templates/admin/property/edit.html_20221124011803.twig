{% extends "baseAdmin.html.twig" %}

{% block title %}
	<title>Créer un nouveau post</title>
{% endblock %}
{% block contentAdmin %}
	<h1>Créer un nouveau post</h1>

	<div class="container" style="margin-top:50px;">
		{% if messages |length >0 %}
{% for message in app.flashes('success') %}

				<div class="alert alert-danger" style="text-align:center;font-weight:bold;">
					{{message.0}}
				</div>
			{% endfor %}
		{% endif %}
		<form action="" method="POST" style="margin-top:50px;" enctype="multipart/form-data">
			<div class="form-group">
			     {{form_widget(form)}}
			</div>
			<button name="submit" type="submit" class="btn btn-primary">Enregistrer un Post</button>
		</form>
	</div>
{% endblock %}
