{% extends "baseAdmin.html.twig" %}

{% block title %}
	<title>Créer un nouveau post</title>
{% endblock %}
{% block contentAdmin %}
	<h1>Créer un nouveau post</h1>

	<div class="container" style="margin-top:50px;">
            {% for message in app.flashes('success') %}
				<div class="alert alert-danger" style="text-align:center;font-weight:bold;">
					{{message}}
				</div>
			{% endfor %}
		    {{form_start(form)}}
			<div class="row">
			    <div class="col-md-4">
                    {{form_widget(form)}} 
                </div>
			</div>
			<button name="submit" type="submit" class="btn btn-primary">Enregistrer un Post</button>
		    {{form_end(form)}}
	</div>
{% endblock %}
