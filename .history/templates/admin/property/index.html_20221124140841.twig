{% extends 'baseAdmin.html.twig' %}
{% block contentAdmin %}
<div class="container" style="padding-top: 150px;font-size:16px;">
	<div class="row">
		<div class="col-6">
			<div class="panel-heading">
				<h1 class="text-left">Posts Lists:</h1>
			</div>
		</div>
		<div class="col-6">
			<div class="panel-heading">
				<a href="" class="btn btn-primary pull-right" style="font-size:16px;">
					<i class="fa fa-plus-circle"></i>
					Ajouter</a>
			</div>
		</div>
	</div>
	<hr>
	<div class="row" style="margin: 50px">

		<table id="myTable" style="border:solid 1px black" width="100%">
			<thead>
				<tr>
					<th>TITRE</th>
					<th>VILLE</th>
					<th>CREATED AT</th>
					<th>PRIX</th>
					<th>ACTIONS</th>
				</tr>
			</thead>
			<tbody>
				{% for property in propertys  %}
					<tr>
						<td>{{property.title |lower}}</td>
						<td>{{property.rooms}}</td>
						<td>{{property.bedrooms}}</td>
						<td>{{property.floor}}</td>
						<td style="text-align:center;">test2</td>
						<td>
							<div class="custom-control custom-switch" style="text-align:center;">
								<input type="checkbox" class="custom-control-input" id="disabled" name="disabled">
								<label class="custom-control-label" for="disabled"></label>
							</div>
						</td>
						<td>
							<div class="btn-group">
								<small>
									<a href="{{path('app_admin_property_edit',{'id':property.id})}}" class="btn btn-primary mr-1" title="Edit" data-toggle="tooltip">
										<i class="fa fa-edit"></i>
									</a>
								</small>

								<small>
									<a href="" class="btn btn-danger mr-1" title="Delete" data-toggle="tooltip">
										<i class="fa fa-trash"></i>
									</a>
								</small>

								<small>
									<a href="" class="btn btn-success mr-1" title="Show" data-toggle="tooltip">
										<i class="fa fa-eye"></i>
									</a>
								</small>

								<small>
									<a href="" class="btn btn-secondary mr-1" title="Details" data-toggle="tooltip">
										<i class="fa fa-list"></i>
									</a>
								</small>
							</div>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
</div>
{% block javascripts %}
	<script src="/js/datatable.js"></script>
	<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
	<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
	<script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
{% endblock %}

{% endblock contentAdmin %}