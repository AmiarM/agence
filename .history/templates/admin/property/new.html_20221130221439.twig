{% extends "baseAdmin.html.twig" %}

{% block title %}
	<title>Créer un nouveau post</title>
{% endblock %}
{% block contentAdmin %}
	<h1>Créer un nouveau post</h1>

	<div class="container" style="margin-top:50px;">
		    {{form_start(form)}}
			<div class="row">
			    <div class="col-md-4">
                    {{form_row(form.title)}} 
                </div>
                <div class="col-md-4">
                    {{form_row(form.surface)}} 
                </div>
                <div class="col-md-4">
                    {{form_row(form.price)}} 
                </div>
			</div>
            <div class="row">
			    <div class="col-md-2">
                    {{form_row(form.rooms)}} 
                </div>
                <div class="col-md-2">
                    {{form_row(form.bedrooms)}} 
                </div>
                <div class="col-md-2">
                    {{form_row(form.floor)}} 
                </div>
                 <div class="col-md-2">
                    {{form_row(form.heat)}} 
                </div>
                 <div class="col-md-2">
                    {{form_row(form.sold)}} 
                </div>
			</div>
            	<div class="row">
			    <div class="col-md-4">
                    {{form_row(form.address)}} 
                </div>
                <div class="col-md-4">
                    {{form_row(form.postal_code)}} 
                </div>
                <div class="col-md-4">
                    {{form_row(form.city)}} 
                </div>
			</div>
            <div class="row">
                <div class="col-md-12">
                    {{form_row(form.description)}}
                </div>
            </div>
			<button name="submit" type="submit" class="btn btn-primary">Enregistrer un Post</button>
		    {{form_end(form)}}
	</div>
{% endblock %}
